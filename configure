#!/bin/bash

git clone git@github.com:NoumanSaleem/npm-registry-couchapp.git

docker build -t couchdb ./couchdb
docker build -t kappa ./kappa
docker build -t npm-registry-couchapp ./npm-registry-couchapp

docker run -d --name couchdb -p 5984:5984 -v /couchdb:/usr/local/var/lib/couchdb couchdb
sleep 5;
couchapp_id=$(docker run -d --link couchdb:couchdb npm-registry-couchapp)
test $(docker wait $couchapp_id) -eq 0
docker run -d -p 80:8000 --link couchdb:couchdb kappa